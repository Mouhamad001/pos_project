language = "bash"
run = "uvicorn main:app --host 0.0.0.0 --port 8000 --root-path /backend"

[build]
command = """
pip install -r backend/requirements.txt
python backend/init_db.py
cd frontend
npm install
npm run build
"""

[deployment]
run = ["sh", "-c", "cd backend && uvicorn main:app --host 0.0.0.0 --port 8000"]
build = ["sh", "-c", "pip install -r backend/requirements.txt && python backend/init_db.py && cd frontend && npm install && npm run build"] 